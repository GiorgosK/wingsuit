{% import "@demo/_macros.twig" as macros %}
{% embed '@wingsuit/_demo-block.twig' with
  {
    "title": "Images",
    "intro": "Check <code>_data/imageStyles.yml</code> ",
  } %}
  {% block content %}
    <h2 class="pl-h2">Image styles</h2>
    {% for imageStyleName, imageStyleSetting in imageStyles %}
      <div>
        {% set imageStyleTitle = imageStyleSetting.label is not empty ? imageStyleSetting.label : imageStyleName %}
        <h3 class="pl-h3">{{ imageStyleTitle }} <span class="pl-text-sm ">({{ imageStyleName }})</span></h3>
        <div class="pl-mt-s">
        {% include "@atoms/image/_image.twig" with {
          variant: 'primary',
          style: imageStyleName,
          placeholder: true,
        } %}
        </div>
        <div class="pl-mt-s">
        {{ macros.display_code(
          '{% include "@atoms/image/_image.twig" with {
    style: ' ~ imageStyleName ~ ',
    placeholder: true
  } %}'
        ) }}
        </div>
        <hr class="pl-hr-s">
      </div>
    {% endfor %}
    {% if imageStylesResponsive is not empty %}
      <hr class="pl-hr">
      <h2 class="pl-h2">Responsive Image styles</h2>
      {% for imageStyleName, imageStyleSetting in imageStylesResponsive %}
        <div>
          {% set imageStyleTitle = imageStyleSetting.label is not empty ? imageStyleSetting.label : imageStyleName %}
          <h3 class="pl-h3">{{ imageStyleTitle }} <span class="pl-text-sm ">({{ imageStyleName }})</span></h3>
          <div class="pl-mt-s">
          {% include "@atoms/image/_image.twig" with {
            style: imageStyleName,
            placeholder: true,
          } %}
          </div>
          <div class="pl-mt-s">
          {{ macros.display_code(
            '{% include "@atoms/image/_image.twig" with {
    style: ' ~ imageStyleName ~ ',
    placeholder: true
  } %}'
          ) }}
          </div>
          <hr class="pl-hr-s">
        </div>
      {% endfor %}
    {% endif %}
    <hr class="pl-hr">
    <h2 class="pl-h2">Image using paths.images path</h2>
    <div>
      {% include '@atoms/image/_image.twig' with {
        variant: 'primary',
        src: paths.images ~'/astrogoat.png'
      } %}
    </div>
<div class="pl-mt-s">
    {{ macros.display_code(
      '{% include "@atoms/image/_image.twig" with {
    variant: \'primary\',
    src: paths.images ~\'/astrogoat.png\'
  } %}'
    ) }}
</div>
    <hr class="pl-hr">
    <h2 class="pl-h2">Background Images</h2>
    <h3 class="pl-h3">SVG</h3>
    {% include '@atoms/image/_image.twig' with {
      variant: 'bg',
      placeholder: false,
      src: paths.images ~ '/logo.svg',
      alt: 'A friendly goat wearing a space helmet. The Astrogoat!',
      image_classes: "image--bg"
    } %}
<div class="pl-mt-s pl-mb-s">
    {{ macros.display_code(
      '{% include "@atoms/image/_image.twig" with {
    variant: \'bg\',
    src: paths.images ~\'/ogo.svg\',
    alt: \'A friendly goat wearing a space helmet. The Astrogoat!\',
    image_classes: \'image--bg\'
  } %}'
    ) }}
</div>
    <h3 class="pl-h3">PNG</h3>
    {% include '@atoms/image/_image.twig' with {
      variant: 'bg',
      src: paths.images ~ '/astrogoat.png',
      alt: 'A friendly goat wearing a space helmet. The Astrogoat!',
      image_classes: "image--bg"
    } %}
<div class="pl-mt-s">
    {{ macros.display_code(
      '{% include "@atoms/image/_image.twig" with {
    variant: \'bg\',
    src: paths.images ~\'/astrogoat.png\',
    alt: \'A friendly goat wearing a space helmet. The Astrogoat!\',
    image_classes: \'image--bg\'
  } %}'
    ) }}
</div>
  {% endblock %}
{% endembed %}
