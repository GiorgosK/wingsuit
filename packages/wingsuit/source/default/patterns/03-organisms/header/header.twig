<header class="z-50 sticky w-full bg-green border-b lg:border-b-0 border-gray-xlight top-0" role="navigation"
     x-data="{ open: false }">

  {% embed "@organisms/container/container.twig" %}
  {% block content %}
  <div class="h-20 justify-between flex flex-wrap md:flex-no-wrap items-center">
    <a href="{{ path('<front>') }}" class="mr-4 w-155">
      {% include "@atoms/svg/_svg--icon.twig" with {
        size: 'w-16 h-16',
        icon: 'logo'
      } %}
    </a>
    <div class="burger align-right mr-6 items-center lg:hidden cursor-pointer"
         @click="open = !open">
      {% include '@atoms/hamburger/hamburger.twig' %}
    </div>
    <div
      class="w-full justify-end lg:flex top-0 absolute lg:relative -ml-6 lg:ml-0 mt-20 lg:mt-0 lg:block lg:w-auto lg:flex-grow lg:items-center"
      :class="{'block': open, 'hidden': !open}">
      {% block menu %}
        {{ menu }}
      {% endblock %}
    </div>
  </div>
  {% endblock %}
  {% endembed %}
</header>
