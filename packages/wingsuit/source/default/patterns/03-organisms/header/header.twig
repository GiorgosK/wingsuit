<div class="leading-normal tracking-normal ">
  {% if has_spacer %}
    <div class="h-18"></div>
  {% endif %}
  <header class="header-offset fixed w-full z-30 top-0 text-white"
          x-bind:class="{ 'bg-white shadow': isScrollDown}"
          x-on:click="menuIsOpen = !menuIsOpen">
    {% embed "@atoms/container/container.twig" %}
      {% block content %}
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
          <div class="flex items-center">
            <a class="text-white no-underline hover:no-underline font-bold text-2xl lg:text-4xl" href="#">
              <!--Icon from: http://www.potlabicons.com/ -->
              <div class="max-w-120">
                {% include "@atoms/image/image.twig" with {"url": "ws-assets://images/logo.svg"} only %}
              </div>
            </a>
          </div>
          <div class="block lg:hidden pr-4">
            {% include "@atoms/hamburger/hamburger.twig" only %}
          </div>
          <div class="w-full flex-grow lg:flex lg:justify-end lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 bg-white lg:bg-transparent text-black p-4 lg:p-0 z-20"
               id="nav-content"
               :class="{'block -mx-6': menuIsOpen, 'hidden': !menuIsOpen}">
            {{ menu }}
            <button class="inline-flex items-center bg-gray-200 border-0 py-1 px-3 focus:outline-none hover:bg-gray-300 rounded text-base mt-4 md:mt-0">Button
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
      {% endblock %}
    {% endembed %}
    <hr class="border-b border-gray-100 opacity-25 my-0 py-0">
  </header>
</div>
