<div class="leading-normal tracking-normal ">
  {% if has_spacer %}
    <div class="h-18"></div>
  {% endif %}
  <header class="header-offset fixed w-full z-30 top-0 text-white" x-data="{ open: false }">
    {% embed "@atoms/container/container.twig" %}
      {% block content %}
        <div class="flex flex-wrap py-5 justify-between md:flex-row">
          <div class="flex items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-pink-500 rounded-full" viewBox="0 0 24 24">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
              </svg>
              <span class="ml-3 text-xl">tailblocks</span>
            </a>
          </div>
          <div class="block lg:hidden pr-4"  @click="open = !open">
            {% include "@atoms/hamburger/hamburger.twig" only %}
          </div>
          <div class="w-full flex-grow lg:flex lg:justify-end lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 bg-white lg:bg-transparent text-black z-20"  :class="{'block': open, 'hidden': !open}">
            {{ menu }}
            <div>
              {{ button }}
            </div>
          </div>
        </div>
      {% endblock %}
    {% endembed %}
    <hr class="border-b border-gray-100 opacity-25 my-0 py-0">
  </header>
</div>
