{# SETTINGS #}
{% set width = width|default('default') %}

{% set bg_classes = ([
  pattern_configuration('container', variant, 'bg')[bg],
] | sort | join(' ') | trim )%}

{% set classes = ([
  pattern_configuration('container', variant, 'padding_x')[padding_x],
  pattern_configuration('container', variant, 'padding_top')[padding_top],
  pattern_configuration('container', variant, 'padding_bottom')[padding_bottom],
  pattern_configuration('container', variant, 'width')[width],
  'px-6',
  'mx-auto'
] | sort | join(' ') | trim )%}

{% set attributes = attributes|default(create_attribute()) %}

{# TEMPLATE #}
{% if bg %}
<div {{ create_attribute().addClass(bg_classes) }}>
{% endif %}
<div {{ attributes.addClass(classes) }}>
  {% block content %}
  {{ content }}
  {% endblock %}
</div>
{% if bg %}
</div>
{% endif %}
