
{% set content %}
  <div class="text-center w-1/2 m-auto pb-8 text-gray-dark pt-10">
    {{ text }}
  </div>
  <div class="block md:flex group hover:no-underline pt-10">
    <div class="w-full md:w-1/2">
      {% block image %}
        {{ image }}
      {% endblock %}
    </div>
    <div class="w-full md:w-1/2 md:pl-4">
      <div class="font-serif text-28 text-blue group-hover:underline">
        {% block headline %}
          {{ headline }}
        {% endblock %}
      </div>
      <div class="text-base mb-10 text-gray-dark font-sans">
        {% block text %}
          {{ text }}
        {% endblock %}
      </div>
      <div>
        {% block button %}
          {{ button }}
        {% endblock %}
      </div>
    </div>
  </div>
  <div class="block md:flex pt-10">
    {% block more %}
      {{ more }}
    {% endblock %}
  </div>
{% endset %}
{% embed "@organisms/container/container.twig" with {content: content}%}
{% endembed %}

