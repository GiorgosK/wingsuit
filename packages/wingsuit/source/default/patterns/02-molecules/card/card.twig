{% set element = element|default('article') %}
{% set attributes = attributes|default(create_attribute()) %}
{% set headline__element = headline__element|default('h2') %}
{% if url is not empty %}
  {% set attributes = attributes.setAttribute('href', url) %}
  {% set element = 'a' %}
{% endif %}
{% set image_classes = ([
  alignment == 'center'?'justify-center': '',
  'flex',
]) | sort | join(' ') | trim %}


<{{ element }} {{ attributes.addClass([
  alignment == 'center'?'text-center': '',
  'w-full md:w-1/3 p-6 flex flex-col flex-grow flex-shrink',
] | sort | join(' ') | trim) }}>


  <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
    <a href="#" class="flex flex-wrap no-underline hover:no-underline">
      {{ image }}
      <p class="w-full text-gray-600 text-xs md:text-sm px-6">
        {% block preheadline %}
          {{ preheadline }}
        {% endblock %}
      </p>
      <h2 class="w-full font-bold text-xl text-gray-800 px-6">
        {% block headline %}
          {{ headline }}
        {% endblock %}</h2>
      <p class="text-gray-800 text-base px-6 mb-5">
        {% block text %}
          {{ text }}
        {% endblock %}
      </p>
    </a>
  </div>
  <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
    <div class="flex items-center justify-start">
      {% include '@atoms/button/button.twig' with {variant: 'primary', content: button} only %}
    </div>
  </div>
</{{ element }}>
