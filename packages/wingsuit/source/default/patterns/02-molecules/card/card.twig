{% set element = element|default('article') %}
{% set attributes = attributes|default(create_attribute()) %}
{% set headline__element = headline__element|default('h2') %}
{% if url is not empty %}
  {% set attributes = attributes.setAttribute('href', url) %}
  {% set element = 'a' %}
{% endif %}
{% set image_classes = ([
  alignment == 'center'?'justify-center': '',
  'flex',
]) | sort | join(' ') | trim %}


<{{ element }} {{ attributes.addClass([
  alignment == 'center' ? 'text-center': '',
  'w-full flex flex-col flex-grow flex-shrink',
] | sort | join(' ') | trim) }}>


  <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
      {{ image }}
      <div class="pt-4">
      <div class="w-full text-gray-600 text-xs md:text-sm px-6">
        {% block preheadline %}
          {{ preheadline }}
        {% endblock %}
      </div>
      <h2 class="w-full font-bold text-3xl text-gray-800 px-6 font-serif">
        {% block headline %}
          {{ headline }}
        {% endblock %}</h2>
      <div class="text-gray-800 text-base px-6 mb-5">
        {% block text %}
          {{ text }}
        {% endblock %}
      </div>
      </div>
  </div>
  <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
    <div class="flex items-center justify-start">
      {% include '@atoms/button/button.twig' with { variant: 'primary', text: "Read more", color: "orange" } only %}
    </div>
  </div>
</{{ element }}>
