{# Classes: #}
{% set classes = classes|default([])|merge([
  variant == 'footer',
]) | sort | join(' ') | trim  %}
{# Defaults: #}
{% set attributes = attributes|default(create_attribute()).addClass(classes) %}

<nav class="flex flex-col" role="navigation">
  <ul {{ attributes }} >
    {% for item in items %}
      <li class="border-b border-b-primary">
        <a class="text-gray-dark text-xs hover:border-b" href="{{ item.link }}">{{ item.title }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>
