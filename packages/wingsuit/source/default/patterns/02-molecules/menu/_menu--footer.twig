{% set attributes = attributes|default(create_attribute()) %}

<nav role="navigation">
  <ul {{ attributes.addClass([
    'list-reset mb-6',
  ] | sort | join(' ') | trim) }} >
    {% for item in items %}
      <li class="mt-2 inline-block mr-2 md:block md:mr-0">
        <a class="no-underline hover:underline text-gray-800 hover:text-orange-500 {% if (item.in_active_trail) %}is-active{% endif %}" href="{{ item.url }}">
          {{ item.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>

