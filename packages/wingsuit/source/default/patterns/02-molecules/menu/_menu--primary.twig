{% set attributes = attributes|default(create_attribute()) %}
  <ul class="list-reset lg:flex justify-end flex-1 items-center">
    {% for item in items %}
      <li class="mr-3">
        <a
          class="inline-block py-2 px-4 text-black font-bold no-underline {% if (item.in_active_trail) %}no-underline {% else %} hover:text-gray-800 hover:text-underline py-2 px-4{% endif %}"
          href="{{ item.url }}">
          {{ item.title }}
        </a>
      </li>
    {% endfor %}
  </ul>

