{# SETTINGS #}
{% set id = uuid() %}

{# ACCORDION-ITEM CLASSES #}
{% set classes = ([
  'tab w-full overflow-hidden border-t',
] | sort | join(' ') | trim )%}

{% set input_classes = ([
  'absolute opacity-0',
] | sort | join(' ') | trim )%}

{% set label_classes = ([
  'block p-5 leading-normal text-base cursor-pointer',
] | sort | join(' ') | trim )%}

{% set content_wrapper = ([
  'tab-content overflow-hidden border-l-2 bg-grey-lightest border-indigo leading-normal',
] | sort | join(' ') | trim )%}

{% set attributes = attributes|default(create_attribute()).addClass(classes) %}

{# TEMPLATE #}
<div {{ attributes }} data-children-count="1">
  <input class="{{ input_classes }}" id="{{ id }}" type="checkbox" name="tabs">
  <label class="{{ label_classes }}" for="{{ id }}">{{ label }}</label>
  <div class="{{ content_wrapper }}">
    <div class="p-5">{{ content }}</div>
  </div>
</div>

