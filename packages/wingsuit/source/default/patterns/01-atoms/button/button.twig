{% set tag_name = tag_name|default('div') %}
{% set attributes = attributes|default(create_attribute()) %}
{% set svg_size = svg_size|default('default') %}

{% if url is not empty %}
  {% set attributes = attributes.setAttribute('href', url) %}
  {% set tag_name = 'a' %}
{% endif %}

<{{ tag_name }} {{ attributes.addClass([
  'inline-flex border-0 py-2 px-6 focus:outline-none rounded text-lg',
  variant == 'default' ? 'bg-pink-500', 'text-white',
  variant == 'gray' ? 'bg-gray-200', 'text-black', 'text-base', 'mt-4 md:mt-0',
  variant == 'hollow' ? 'border border-' ~ color ~ '-500', 'text-' ~ color  ~ '-500',
] | sort | join(' ') | trim) }}>
{{ text }}
  {% if svg is not empty %}
    {% include "@atoms/svg/_svg--icon.twig" with {
      icon: svg,
      size: 'w-4',
    } %}
  {% endif %}
</{{ tag_name }}>
