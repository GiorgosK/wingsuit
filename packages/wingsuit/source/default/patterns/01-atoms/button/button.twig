{% set tag_name = tag_name|default('div') %}
{% set attributes = attributes|default(create_attribute()) %}
{% set svg_size = svg_size|default('default') %}

{% if url is not empty %}
  {% set attributes = attributes.setAttribute('href', url) %}
  {% set tag_name = 'a' %}
{% endif %}

<{{ tag_name }} {{ attributes.addClass([
  variant == 'default' ? ' mx-auto lg:mx-0 hover:underline text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg',
  variant == 'hollow' ? ' mx-auto lg:mx-0 hover:underline text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg',
] | sort | join(' ') | trim) }}>
{{ text }}
  {% if svg is not empty %}
    {% include "@atoms/svg/_svg--icon.twig" with {
      icon: svg,
      size: size,
    } %}
  {% endif %}
</{{ tag_name }}>
