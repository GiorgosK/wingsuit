{% set attributes = attributes|default(create_attribute()) %}
{% set element = element|default('div') %}
{% set size = size|default('large') %}

<{{ element }} {{ attributes.addClass([
  'headline',
  'font-serif',
  size == 'large' ? 'text-4xl',
  size == 'medium' ? 'text-xl',
] | sort | join(' ') | trim) }}>
{{ title_prefix }}
  {{ title_suffix }}
  {{ content }}
</{{ element }}>
