
{#
/**
 * @file
 * image
 *
 * Available variables for image:
 *  - variant [string]: Indicates which image pattern to use.
 *  - src [string]: Specifies the URL of an image.
 *  - alt [string]: Specifies an alternate text for an image.
 *  - placeholder [bool]: Specifies image as placeholder (see _image--placeholder.twig).
 */
#}
{% set img_attributes = create_attribute().addClass(size) %}

{%- set image -%}
{% if placeholder == true %}
{%- include '@atoms/image/_image--placeholder.twig' -%}
{%- endif -%}
{%- endset -%}

{% if variant == 'primary' %}
  {% include '@atoms/image/_image--primary.twig' %}
{% elseif variant == 'bg' %}
  {% include '@atoms/image/_image--bg.twig' %}
{% endif %}

