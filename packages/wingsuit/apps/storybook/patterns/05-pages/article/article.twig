{% embed "@templates/site-container.twig"
  with {
  primary_menu: pattern_preview('menu', 'primary'),
  footer_menu: pattern_preview('menu', 'footer')

} %}
  {% block main %}
    {% set more %}
      {% embed '@organisms/grid/grid.twig' with {config_3: 'equal', columns: 3, gap: 'default'} %}
        {% block column_1 %}
          {{ pattern_preview('card') }}
        {% endblock %}
        {% block column_2 %}
          {{ pattern_preview('card') }}
        {% endblock %}
        {% block column_3 %}
          {{ pattern_preview('card') }}
        {% endblock %}
      {% endembed %}
    {% endset %}
    {% include '@templates/article/article.twig' with {
      headline: 'Headline',
      text: 'Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups.',
      image: pattern_preview('image', 'primary'),
      button: pattern_preview('button', 'default'),
      more: more

    } %}
  {% endblock %}
{% endembed %}
