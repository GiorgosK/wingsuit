{% set content %}
  <div class="max-w-container px-4 m-auto">
    <div class="text-center w-1/2 m-auto pb-8 text-gray-dark">{{ "Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups." }}</div>
    {{ pattern_preview('card', 'horizontal', {
      headline: 'Card title',
      button: 'more',
    }) }}
    <div class="block md:flex pt-10">
      <div class="w-full md:w-1/3 pr-2">
        {% embed '@molecules/card/card.twig' with {
          variant: 'rectangle',
        } only %}
          {% block image %}
            {% include "@atoms/image/image.twig" with {
              placeholder: true,
              style: '16x9_xs_sc'
            } %}
          {% endblock %}
        {% endembed %}
      </div>
      <div class="w-full md:w-1/3 px-2">
        {% embed '@molecules/card/_card.twig' with {
          variant: 'circle',
          circle: true
        } only %}
          {% block image %}
            {% include "@atoms/image/_image.twig" with {
              placeholder: true,
              style: '16x9_xs_sc'
            } %}
          {% endblock %}
        {% endembed %}
      </div>
      <div class="w-full md:w-1/3 pl-2">
        {% embed '@molecules/card/card.twig' with {
          variant: 'rectangle',
        } only %}
          {% block image %}
            {% include "@atoms/image/_image.twig" with {
              placeholder: true,
              style: '16x9_xs_sc'
            } %}
          {% endblock %}
        {% endembed %}
      </div>
    </div>
  </div>
{% endset %}

{% embed '@organisms/header/header.twig' %}
  {% block burger_menu %}
    {% include '@atoms/svg/_svg--icon.twig' with {"icon": "menu", "size": "w-7"} %}
  {% endblock %}
  {% block logo %}
    {% include "@atoms/image/image.twig" with {
      variant: 'primary',
      src: file_url('dump.png'),
    } %}
  {% endblock %}
  {% block menu %}
    {% include '@molecules/menu/menu.twig' with {items: wingsuit.primary_menu.items, variant: 'primary'} %}
  {% endblock %}
{% endembed %}

<main class="main-content w-full py-10 mt-20">
  {% block content %}
    {{ content }}
  {% endblock %}
</main>

{% embed '@organisms/footer/footer.twig' %}
  {% block footer_menu %}
    {% include '@molecules/menu/menu.twig' with {items: wingsuit.footer_menu.items, variant: 'footer'} %}
  {% endblock %}
{% endembed %}
