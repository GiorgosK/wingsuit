{# SETTINGS #}
{% set id = uuid() %}

{# TEMPLATE #}

<div id="accordion">
  <div class="card">
    <div class="card-header" id="{{ id }}">
      <h5 class="mb-0">
        <button class="btn btn-block btn-link text-left" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          {{ label }}
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="{{ id }}" data-parent="#accordion">
      <div class="card-body">
        {{ content }}
      </div>
    </div>
  </div>
</div>
