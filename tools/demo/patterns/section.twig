<section class="ws-container mx-auto">
    <div class="ws-pt-4 ws-doc-block">
        {% if section_title is not empty %}
        <{{ tag_name|default('h2') }}>{{ section_title }}</{{ tag_name|default('h2') }}>
    {% endif %}
    {% if intro is not empty or doc_link is not empty %}
        <div>

            {% if intro is not null %}
                <p>{{ intro }}</p>
            {% endif %}
            {% if doc_link is not empty %}
                <p>For more information see: <a href="{{ doc_link }}" target="_blank"
                                                rel="noopener noreferrer">Tailwind
                        Documentation</a></p>
            {% endif %}
        </div>
    {% endif %}
    </div>
    {% block content %}
        {% if content is not empty %}
            <div class="ws-mb-12">
                {{ content }}
            </div>
        {% endif %}
    {% endblock %}
</section>
{% if seperator %}
    <hr class="ws-doc-block-seperator">
{% endif %}


