{% import "@ws-demo/macros/properties.twig" as properties %}
{% import "@ws-demo/macros/tabs.twig" as tabs %}
{% import "@ws-demo/macros/code.twig" as code %}

{% embed '@ws-demo/patterns/section.twig' with
    {
        "section_title": "The font",
        "intro": "The <code>theme.fontFamily</code> section of your <code>tailwind.config.js</code> file allows you to override Tailwind's default fontFamily.",
        "doc_link": "https://tailwindcss.com/docs/configuration"
    } %}
    {% block content %}
        {% set font_sizes %}{{ properties.list("", "The quick brown fox jumped over the lazy dog.", "text", tailwind.theme.fontSize) }}      {% endset %}
        {% set font_weights %}{{ properties.list("", "The quick brown fox jumped over the lazy dog.", "font", tailwind.theme.fontWeight) }}      {% endset %}
        {% set letter_spacing %}{{ properties.list("", "The quick brown fox jumped over the lazy dog.", "tracking", tailwind.theme.letterSpacing) }}{% endset %}
        {% set line_height %}{{ properties.list("", "At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet.", "leading", tailwind.theme.lineHeight) }}{% endset %}
        {% set tabs_config = {
            'font_size': {'label': 'Font Sizes', 'content': font_sizes },
            'font_weights': {'label': 'Font Weight', 'content': font_weights },
            'letter_spacing': {'label': 'Letter Spacing', 'content': letter_spacing },
            'line_height': {'label': 'Line Height', 'content': line_height }
        } %}
        {{ tabs.tabs(tabs_config) }}
    {% endblock %}
{% endembed %}


