{#
  Renders tailwind config.

  @param string theme_name
    The tailwind config 'theme name'.
  @param string items
    The tailwind config.
#}
{% macro display(theme_name, items) %}
    <div class="pl-code rounded-lg text-white bg-black mt-10">
        // tailwind.config.js
        <div>module.exports = {</div>
        <div class="ml-2">theme: {</div>
        <pre class="ml-4">
{{ theme_name }}:&nbsp;
{{- items|json_encode(constant('JSON_PRETTY_PRINT')) -}}
        </pre>
        <div class="ml-2">}</div>
        <div>}</div>
    </div>
{% endmacro %}
