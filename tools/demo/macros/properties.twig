{#
  Renders tailwind properties as a table.

  @param string title
    The property title.
  @param string doc_link
    Link to the tailwind documentation.
  @param string column_name
    The name of the property column name.
  @param string prefix
    The prefix of the property. E.g. bg or text.
  @param array items
    tailwind property items.
#}
{% macro table(title, doc_link, column_name, prefix, items) %}

    <div class="ws-doc-block">
    <h2>{{ title }}{% if doc_link is not empty %}
            <a href="{{ doc_link }}">(Tailwind documentation)</a>
        {% endif %}</h2>
    </div>
    <div
            class="lg:max-h-sm ws-overflow-y-auto ws-scrollbar-w-2 ws-scrollbar-track-gray-lighter ws-scrollbar-thumb-rounded ws-scrollbar-thumb-gray ws-scrolling-touch"
            style="max-height: 400px">
        <table class="ws-table">
            <thead>
            <tr>
                <th>Class</th>
                <th>{{ column_name }}</th>
            </tr>
            </thead>
            <tbody>
            {% for name, value in items %}
                <tr>
                    <td>.{{ prefix }}-{{ name }}</td>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}

{#
  Renders tailwind properties as a list.

  @param string title
    The property title.
  @param string text
    The printed text.
  @param string prefix
    The prefix of the property. E.g. bg or text.
  @param array items
    tailwind property items.
#}

{% macro list(title, text, prefix, items) %}
    {% if title is not empty %}
    <div class="ws-doc-block">
        <h3>{{ title }}</h3>
    </div>
    {% endif %}
    <div class="ws-samples ws-bg-white ws-rounded-lg ws-border border-gray-400 p-4 ">
        {% for name, value in items %}
            <div class="mb-6"><p class="text-sm text-gray-600">.{{ prefix }}-{{ name }}</p>
                <p class="{{ prefix }}-{{ name }} text-gray-800">{{ text }}</p></div>
        {% endfor %}
    </div>
{% endmacro %}
