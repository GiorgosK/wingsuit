{% import "@ws-demo/macros/code.twig" as code %}

{% embed '@ws-demo/page.twig' with
  {
    "title": "SVG Component",
    "intro": "Store your SVG files in the SVG subdirectory to have them
      made available via the <code>_svg--icon.twig</code> partial or using a Css Class.",
  } %}

  {% block content %}
    <section class="pl-section">
      <h2 class="pl-h2">Icons</h2>
      <table  class="pl-table">
        <thead>
        <tr>
          <th>Icon Name</th>
          <th>Svg Icon</th>
          <th>Css Class</th>
        </tr>


        </thead>
        {% for svgIcon in svgs %}
          <tr>
            <td>
              <h3><b>sprite-{{ svgIcon }}</b></h3>
            </td>
            <td>
              {% include "@atoms/svg/_svg--icon.twig" with {
                icon: svgIcon,
                size: 'pl-w-4'
              } %}
              {{ code.block(
                '{% include "@atoms/svg/_svg--icon.twig" with {
    icon: ' ~ svgIcon ~ ',
    size: "w-4"
  } %}'
              ) }}
            </td>
            <td>
            <div class="sprite-{{ svgIcon }} w-4 h-4"></div>
              {{ code.block(
                '&lt;i class="sprite-' ~ svgIcon ~ ' pl-w-4 pl-h-4">&lt;/i>'
              ) }}
            </td>


          </tr>
        {% endfor %}
      </table>

    </section>
  {% endblock %}
{% endembed %}
