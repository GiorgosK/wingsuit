 */
#}
{% embed '@demo/_demo-block.twig' with
  {
    "title": "Breakpoints",
    "intro": "You define your project's breakpoints in the <code>theme.screens</code> section of your <code>tailwind.config.js</code>
        file.",
    "doc_link": "https://tailwindcss.com/docs/breakpoints/"
  } %}
  {% block content %}
    <section class="pl-section">
      <h2 class="pl-h2">Screens</h2>
      <table class="pl-table">
        <thead>
        <th>
          Screen name
        </th>
        <th>
          Min-width
        </th>
        </thead>
        <tbody>
        {% for bp, value in tailwind.theme.screens %}
          <tr>
            <td>{{ bp }}</td>
            <td>{{ value }}</td>
          </tr>
          </li>
        {% endfor %}
        </tbody>
      </table>
    </section>
    <hr class="pl-hr">
    <section class="pl-section">
      <h2 class="pl-h2">Devices</h2>
    <table class="pl-table">
      <thead>
        <th>Device name</th>
        <th>Device width</th>
      </thead>
      {% for device in device_widths %}
        <tr>
          <td>{{ device.name }}</td>
          <td>{{ device.width }}px</td>
        </tr>
      {% endfor %}
    </table>
    </section>
  {% endblock %}
{% endembed %}

