{#
/**
 * @file Spacing!
 * Documenting Spacing Examples from Tailwind.
 *
 * @see https://tailwindcss.com/docs/customizing-spacing
 */
#}
{% import "@demo/_macros.twig" as macros %}

{% embed '@demo/_demo-block.twig' with
  {
    "title": "Customizing Spacing",
    "intro": "The <code>theme.spacing</code> section of your <code>tailwind.config.js</code> file allows you to override Tailwind's default spacing/sizing scale.",
    "doc_link": "https://tailwindcss.com/docs/customizing-spacing"
  } %}
  {% block content %}
    <section class="pl-section">
      {{ macros.properties("Padding", "https://tailwindcss.com/docs/padding", "Padding", "p", tailwind.theme.padding) }}

      {{ macros.display_config('padding', tailwind.theme.padding) }}
    </section>
    <hr class="pl-hr">
    <section class="pl-section">
      {{ macros.properties("Margin", "https://tailwindcss.com/docs/margin", "Margin", "m", tailwind.theme.margin) }}
    </section>
  {% endblock %}


{% endembed %}
