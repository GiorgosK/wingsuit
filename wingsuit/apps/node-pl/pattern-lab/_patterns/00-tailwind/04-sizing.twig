{#
/**
 * @file Sizing!
 * Documenting Sizing Examples from Tailwind.
 *
 * @see https://tailwindcss.com/docs/customizing-spacing
 */
#}
{% import "@demo/_macros.twig" as macros %}

{% embed '@demo/_demo-block.twig' with
  {
    "title": "Customizing Sizing",
    "intro": "The <code>theme.spacing</code> section of your <code>tailwind.config.js</code> file allows you to override Tailwind's default spacing/sizing scale.",
    "doc_link": "https://tailwindcss.com/docs/customizing-spacing"
  } %}
  {% block content %}
    <section class="pl-section">
      <div class="pl-mb">
        {{ macros.properties("Width", "https://tailwindcss.com/docs/width", "Width", "w", tailwind.theme.width) }}
      </div>
      <div class="pl-mb">
        {{ macros.properties("Min Width", "https://tailwindcss.com/docs/min-width", "Min Width", "min-w", tailwind.theme.minWidth) }}
      </div>
      <div class="pl-mb">
        {{ macros.properties("Max Width", "https://tailwindcss.com/docs/max-width", "Max Width", "max-w", tailwind.theme.maxWidth) }}
      </div>
    </section>
    <hr class="pl-hr">
    <section class="pl-section">
      <div class="pl-mb">
        {{ macros.properties("Height", "https://tailwindcss.com/docs/height", "Height", "h", tailwind.theme.height) }}
      </div>
      <div class="pl-mb">
        {{ macros.properties("Min Height", "https://tailwindcss.com/docs/min-height", "Min Height", "min-h", tailwind.theme.minHeight) }}
      </div>
      <div class="pl-mb">
        {{ macros.properties("Max Height", "https://tailwindcss.com/docs/max-height", "Max Height", "max-h", tailwind.theme.maxHeight) }}
      </div>
    </section>

  {% endblock %}
{% endembed %}

